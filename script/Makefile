PHONY += help
help :
	@echo  'OrangePi SDK makefile'
	@echo  'Usage method :'
	@echo  '	make targets [Options]'
	@echo  ''
	@echo  'generic targets:'
	@echo  '  kernel	- Build the kernel'
	@echo  '  uboot		- Build the uboot'
	@echo  '  rootfs	- Build debian & ubuntu file system'
	@echo  '  clean '
	@echo  '  image			[sdcard=/dev/sdX] - Build SDcard image and partition'
	@echo  '  install_uboot		[sdcard=/dev/sdX] - Install uboot to SDcard'
	@echo  '  install_kernel	[sdcard=/dev/sdX] - Install kernel to SDcard'
	@echo  '  install_rootfs	[sdcard=/dev/sdX] - Install rootfs to SDcard'
	@echo  '  update_uboot 		[sdcard=/dev/sdX] - update uboot to SDcard'
	@echo  '  update_kernel		[sdcard=/dev/sdX] - update kernel to SDcard'
	@echo  ''
	@echo  'Configuration targets:'
	@echo  '  config_uboot		- menuconfig uboot'
	@echo  '  config_kernel		- menuconfig kernel'
	@echo  ''
	@echo  'Example:'
	@echo  ''
	@echo  '	make kernel' 
	@echo  '	make uboot'
	@echo  '	make rootfs' 
	@echo  '	make image sdcard=/dev/sdX'
	@echo  '	make install_uboot sdcard=/dev/sdX'
	@echo  '	make install_kernel sdcard=/dev/sdX'
	@echo  '	make install_rootfs sdcard=/dev/sdX'
	@echo  ''
.PHONY: $(PHONY)
